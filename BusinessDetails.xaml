        <Label Content="City" HorizontalAlignment="Left" Margin="55,105,0,0" FontSize ="14" VerticalAlignment="Top"/>
        <TextBox x:Name= "bname" HorizontalAlignment="Left" Height="23" Margin="200,32,0,0" FontSize ="14" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269"/>
        <TextBox x:Name= "state" HorizontalAlignment="Left" Height="23" Margin="200,70,0,0" FontSize ="14" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269"/>
        <TextBox x:Name= "city" HorizontalAlignment="Left" Height="23" Margin="200,105,0,0" FontSize ="14" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="269"/>
        <Label Content="Number of businesses in the same city" HorizontalAlignment="Left" Margin="60, 150,0,0" FontSize ="14" VerticalAlignment="Top"/>
        <Label Content="Number of businesses in the same state" HorizontalAlignment="Left" Margin="60,186,0,0" FontSize ="14" VerticalAlignment="Top"/>
        <Label x:Name ="numInState" Content ="_________" HorizontalAlignment="Left" Margin="347,146,0,0" VerticalAlignment="Top"/>
        <Label x:Name ="numInCity" Content="_________" HorizontalAlignment="Left" Margin="345,180,0,0" VerticalAlignment="Top"/>

        </Grid>
</Window>
