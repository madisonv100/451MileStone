<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="400" Width="600">
    <Grid>
        <Label x:Name="State" Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,40,0,0" FontSize="14"/>
        <Label x:Name="City" Content="City" HorizontalAlignment="Left" Margin="110,80,0,0" VerticalAlignment="Top" FontSize="14"/>
        <DataGrid x:Name="businessGrid" HorizontalAlignment="Left" Height="285" Margin="60,125,0,0" FontSize="14" VerticalAlignment="Top" Width="475"/>
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Margin="190,39,0,0" FontSize="14" SelectionChanged="stateList_SelectionChanged"/>
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="240" Margin="190,80,0,0" FontSize="14"/>

    </Grid>
</Window>
